# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{config,nuspec,ps1,tf,yml}]
charset = utf-8

[*.ps1]
indent_style = space
indent_size = 4

[*.{config,nuspec,tf,yml}]
indent_style = space
indent_size = 2
